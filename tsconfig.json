{
  "compilerOptions": {
    "outDir": "./build/",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
